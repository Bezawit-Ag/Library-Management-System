<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.poli.lms.PenaltyController"
            prefWidth="600" prefHeight="400">
    <VBox spacing="10" alignment="TOP_CENTER" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10"
          AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10">
        <Label text="Penalty List" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

        <TableView fx:id="penaltyTable" prefHeight="300">
            <columns>
                <TableColumn fx:id="userIdCol" text="User ID" prefWidth="100" />
                <TableColumn fx:id="bookTitleCol" text="Book Title" prefWidth="200" />
                <TableColumn fx:id="reasonCol" text="Reason" prefWidth="150" />
                <TableColumn fx:id="amountCol" text="Amount" prefWidth="100" />
            </columns>
        </TableView>

        <Button text="Close" onAction="#handleClose" />
    </VBox>
</AnchorPane>
