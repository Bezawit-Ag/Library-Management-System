<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane fx:id="propertyContainer" prefHeight="620.0" prefWidth="876.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.poli.lms.studentPropertyController">

    <children>
        <VBox spacing="20" layoutX="21.0" layoutY="10.0" prefWidth="834.0">
            <children>

                <!-- Form Section -->
                <GridPane hgap="10" vgap="10">
                    <padding>
                        <Insets top="10" right="10" bottom="10" left="10"/>
                    </padding>
                    <children>
                        <Label text="MID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <TextField fx:id="midField" prefWidth="200.0" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                        <Label text="Device Type:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <TextField fx:id="deviceTypeField" promptText="e.g., Laptop, Tablet" prefWidth="200.0" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                        <Label text="Serial Number:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                        <TextField fx:id="serialNumberField" prefWidth="200.0" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                        <Label text="Device Model:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                        <TextField fx:id="deviceModelField" promptText="e.g., Dell XPS 13" prefWidth="200.0" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                        <Label text="Entry Date:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                        <DatePicker fx:id="entryDateField" prefWidth="200.0" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
                    </children>
                </GridPane>

                <!-- Buttons Section -->
                <HBox spacing="10" alignment="CENTER_RIGHT">
                    <children>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Button fx:id="addEntryBtn" text="Add" onAction="#handleRegisterEntry" prefWidth="100.0">
                            <cursor>
                                <Cursor fx:constant="HAND"/>
                            </cursor>
                        </Button>
                        <Button fx:id="editEntryBtn" text="Edit" onAction="#handleUpdateEntry" prefWidth="100.0">
                            <cursor>
                                <Cursor fx:constant="HAND"/>
                            </cursor>
                        </Button>
                        <Button fx:id="deleteEntryBtn" text="Delete" onAction="#handleDeleteEntry" prefWidth="100.0" style="-fx-background-color: #ff4d4d;">
                            <cursor>
                                <Cursor fx:constant="HAND"/>
                            </cursor>
                        </Button>
                    </children>
                </HBox>

                <!-- Registered Devices Section -->
                <VBox spacing="10">
                    <children>
                        <Text text="Registered Devices" styleClass="title">
                            <font>
                                <Font size="24.0"/>
                            </font>
                        </Text>
                        <TableView fx:id="propertyTable" prefHeight="300.0" prefWidth="826.0">
                            <columns>
                                <TableColumn fx:id="midColumn" text="MID" prefWidth="100"/>
                                <TableColumn fx:id="deviceTypeColumn" text="Device Type" prefWidth="140"/>
                                <TableColumn fx:id="serialNumberColumn" text="Serial Number" prefWidth="200"/>
                                <TableColumn fx:id="deviceModelColumn" text="Device Model" prefWidth="180"/>
                                <TableColumn fx:id="entryDateColumn" text="Entry Date" prefWidth="150"/>
                            </columns>
                        </TableView>
                    </children>
                </VBox>

            </children>
        </VBox>
    </children>
</AnchorPane>

