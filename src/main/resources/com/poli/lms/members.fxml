<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane fx:id="membersContainer" prefHeight="485.0" prefWidth="771.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.poli.lms.MembersController">

    <children>
        <GridPane layoutX="38.0" layoutY="54.0" prefHeight="299.0" prefWidth="679.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="679.0" minWidth="10.0" prefWidth="679.0" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="242.0" minWidth="0.0" prefWidth="0.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints maxHeight="165.0" minHeight="0.0" prefHeight="40.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="211.0" minHeight="5.0" prefHeight="211.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="34.0" minHeight="0.0" prefHeight="0.0" vgrow="SOMETIMES" />
            </rowConstraints>

            <children>
                <!-- Title and Buttons Row -->
                <HBox spacing="20" alignment="CENTER_LEFT" prefWidth="679.0" GridPane.rowIndex="0">
                    <children>
                        <Text text="Members">
                            <font>
                                <Font size="24.0" />
                            </font>
                        </Text>
                        <Region HBox.hgrow="ALWAYS" />
                        <Button fx:id="addMemberBtn" mnemonicParsing="false" onAction="#addMemberBtnHandler" prefHeight="30.0" prefWidth="97.0" text="Add" />
                        <Button fx:id="deleteMemberBtn" mnemonicParsing="false" onAction="#deleteMemberBtnHandler" prefHeight="30.0" prefWidth="100.0" text="Delete" />
                        <Button mnemonicParsing="false" onAction="#editMemberBtnHandler" prefHeight="30.0" prefWidth="97.0" text="Edit" />
                    </children>
                </HBox>

                <!-- Members Table -->
                <TableView fx:id="membersTable" prefHeight="229.0" prefWidth="566.0" GridPane.rowIndex="1">
                    <columns>
                        <TableColumn fx:id="MIDCol" prefWidth="75.0" text="MID" />
                        <TableColumn fx:id="nameCol" prefWidth="107.0" text="Name" />
                        <TableColumn fx:id="genderCol" prefWidth="99.0" text="Gender" />
                        <TableColumn fx:id="departmentCol" minWidth="8.0" prefWidth="101.0" text="Department" />
                        <TableColumn fx:id="numberBorrowedCol" prefWidth="183.0" text="Number Borrowed" />
                    </columns>
                </TableView>
            </children>
        </GridPane>
    </children>
</AnchorPane>
