<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane fx:id="mainPage"
            prefHeight="639.0"
            prefWidth="1037.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.poli.lms.MainPageController"
            styleClass="main-page-root"
            stylesheets="@mainPage.css">

   <left>
      <VBox fx:id="sidebar"
            spacing="20.0"
            styleClass="glass-sidebar"
            BorderPane.alignment="CENTER">
         <padding>
            <Insets top="40.0" left="20.0" right="20.0"/>
         </padding>
         <children>
            <Text fx:id="titleText"
                  text="BDU LMS"
                  wrappingWidth="205.0"
                  styleClass="sidebar-title">
               <font>
                  <Font name="Segoe UI Bold" size="24.0"/>
               </font>
            </Text>

            <Button fx:id="booksBtn" text="Books" onAction="#booksBtnHandler" styleClass="glass-btn">
               <cursor><Cursor fx:constant="HAND"/></cursor>
            </Button>

            <Button fx:id="membersBtn" text="Members" onAction="#membersBtnHandler" styleClass="glass-btn">
               <cursor><Cursor fx:constant="HAND"/></cursor>
            </Button>

            <Button fx:id="issueBookBtn" text="Issue Book" onAction="#issueBookBtnHandler" styleClass="glass-btn">
               <cursor><Cursor fx:constant="HAND"/></cursor>
            </Button>

            <Button fx:id="returnBookBtn" text="Return Book" onAction="#returnBookBtnHandler" styleClass="glass-btn">
               <cursor><Cursor fx:constant="HAND"/></cursor>
            </Button>

            <Button fx:id="donateBookBtn" text="Donate Book" onAction="#donateBookBtnHandler" styleClass="glass-btn">
               <cursor><Cursor fx:constant="HAND"/></cursor>
            </Button>

            <Button fx:id="penaltyBtn" text="View Penalties" onAction="#penaltyBtnHandler" styleClass="glass-btn">
               <cursor><Cursor fx:constant="HAND"/></cursor>
            </Button>

            <Button fx:id="studentPropertyBtn" text="Student Property" onAction="#studentPropertyBtn" styleClass="glass-btn">
               <cursor><Cursor fx:constant="HAND"/></cursor>
            </Button>
         </children>
      </VBox>
   </left>

   <center>
      <AnchorPane fx:id="contentArea"
                  styleClass="content-area"
                  BorderPane.alignment="CENTER" />
   </center>
</BorderPane>
